{{#if errors}}
  <ul>
    {{#each errors}}
      <li>{{this.msg}}</li>
    {{/each}}
  </ul>
{{/if}}
{{! This is the input form }}
<form action="/create-event" method="post" class="bg-gray-100 p-6 rounded-md">
  <label for="eventName" class="block text-gray-700">Event Name:</label>
  <input
    type="text"
    id="eventName"
    name="eventName"
    value={{formData.eventName}}
    class="w-full px-3 py-2 mt-1 mb-6 border rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-200"
  />

  <label for="eventDate" class="block text-gray-700">Event Date:</label>
  <input
    type="date"
    id="eventDate"
    name="eventDate"
    value={{formData.eventDate}}
    class="w-full px-3 py-2 mt-1 mb-6 border rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-200"
  />

  <label for="location" class="block text-gray-700">Location:</label>
  <input
    type="text"
    id="location"
    name="location"
    value={{formData.location}}
    class="w-full px-3 py-2 mt-1 mb-6 border rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-200"
  />

  <label for="description" class="block text-gray-700">Description:</label>
  <textarea
    id="description"
    name="description"
    class="w-full px-3 py-2 mt-1 mb-6 border rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-200"
  >{{formData.description}}</textarea>

  <input
    type="submit"
    value="Create Event"
    class="px-4 py-2 bg-blue-200 text-gray-700 rounded-md cursor-pointer hover:bg-blue-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
  />
</form>
